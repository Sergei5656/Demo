<Window x:Class="Demos.Windows.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demos.Windows"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="500" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2"></Rectangle>
        <Label Grid.ColumnSpan="2">Главное меню</Label>
        <Button x:Name="ClientBtn" Grid.ColumnSpan="2" Grid.Row="1">Клиент</Button>
        <Button x:Name="ServiceBtn" Grid.ColumnSpan="2" Grid.Row="2">Сервис</Button>
        <Button x:Name="ClientServiceBtn" Grid.ColumnSpan="2" Grid.Row="3">Сервер Клиент</Button>
        <Button x:Name="ExitBtn" Grid.Column="1" Grid.Row="4">Выйти</Button>
        <Button x:Name="BackBtn" Grid.Column="0" Grid.Row="4">Назад</Button>
    </Grid>
</Window>
